@page "/reportes"
@rendermode InteractiveServer
@using System.Globalization

@inject ServicioFactura ServicioFactura
@inject ControladorFactura ControladorFactura
@inject IJSRuntime JSRuntime

<style>
    /* Estilos basados en la paleta Waldos (Rojo y Verde) */
    .header-reporte { background-color: #008f39 !important; color: white !important; }
    .total-anual-row { background-color: #D50000 !important; color: white !important; font-weight: bold; }
    .text-primary { color: #D50000 !important; }
    
    /* Estilos para modo edición de filas */
    .bg-editing-row { background-color: #fff3cd !important; }
    .accordion-button { font-weight: bold; } 
</style>

<main class="container">

    <!-- SECCIÓN DE HISTORIAL Y EDICIÓN -->
    <div class="card p-4 mb-4 shadow-sm" style="border-top: 5px solid #D50000;">
        <h3 class="mb-3 text-primary">🔎 Historial de Facturas (Activas)</h3>
        
        <div class="input-group mb-3">
            <span class="input-group-text fw-bold">Cliente:</span>
            <InputText class="form-control" @bind-Value="_nombreClienteBusqueda" placeholder="Nombre del cliente..." />
            <button class="btn btn-primary" @onclick="BuscarHistorial">Buscar</button>
        </div>

        @if (_historialFacturas.Any())
        {
            <div class="accordion" id="historialAccordion">
                @foreach (var facturaHist in _historialFacturas)
                {
                    <div class="accordion-item border-success">
                        <h2 class="accordion-header" id="heading-@facturaHist.Id">
                            <button class="accordion-button collapsed text-dark" type="button" data-bs-toggle="collapse" data-bs-target="#collapse-@facturaHist.Id">
                                <div class="d-flex w-100 justify-content-between me-3">
                                    <span>🧾 Factura #@facturaHist.Id - <small class="text-muted">@facturaHist.Fecha.ToShortDateString()</small></span>
                                    <span class="text-success">@facturaHist.Total.ToString("C")</span>
                                </div>
                            </button>
                        </h2>
                        <div id="collapse-@facturaHist.Id" class="accordion-collapse collapse" data-bs-parent="#historialAccordion">
                            <div class="accordion-body bg-light">
                                
                                @if (_facturaEnEdicionId == facturaHist.Id)
                                {
                                    <!-- MODO EDICIÓN COMPLETA (CABECERA Y ARTÍCULOS) -->
                                    <div class="card p-3 border-warning mb-3">
                                        <div class="d-flex justify-content-between align-items-center mb-3">
                                            <h6 class="text-warning fw-bold m-0">✏️ Edición Activa</h6>
                                            <button class="btn btn-sm btn-secondary" @onclick="CancelarEdicion">Cerrar Edición</button>
                                        </div>

                                        <!-- 1. Editar Cabecera (Cliente/Fecha) -->
                                        <EditForm Model="_facturaParaEditar" OnValidSubmit="() => GuardarEdicionCabeceraAsync(facturaHist.Id)">
                                            <DataAnnotationsValidator />
                                            <div class="row g-2 align-items-end">
                                                <div class="col-md-5">
                                                    <label class="small fw-bold">Cliente:</label>
                                                    <InputText class="form-control" @bind-Value="_facturaParaEditar.NombreCliente" />
                                                </div>
                                                <div class="col-md-4">
                                                    <label class="small fw-bold">Fecha:</label>
                                                    <InputDate class="form-control" @bind-Value="_facturaParaEditar.Fecha" />
                                                </div>
                                                <div class="col-md-3">
                                                    <button type="submit" class="btn btn-success w-100">Actualizar Datos</button>
                                                </div>
                                            </div>
                                        </EditForm>

                                        <hr />

                                        <!-- 2. Gestión de Artículos -->
                                        <h6 class="text-muted fw-bold mb-2">📦 Gestión de Artículos</h6>
                                        <table class="table table-sm table-bordered bg-white text-center align-middle">
                                            <thead class="table-light">
                                                <tr>
                                                    <th>Producto</th>
                                                    <th width="15%">Cant.</th>
                                                    <th width="20%">Precio</th>
                                                    <th width="20%">Acciones</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var art in facturaHist.Articulos)
                                                {
                                                    @if (_articuloEnEdicionId == art.ArticuloId)
                                                    {
                                                        <!-- Fila en Edición -->
                                                        <tr class="bg-editing-row">
                                                            <td><input class="form-control form-control-sm" @bind="_articuloEditando.Nombre" /></td>
                                                            <td><input type="number" class="form-control form-control-sm" @bind="_articuloEditando.Cantidad" /></td>
                                                            <td><input type="number" class="form-control form-control-sm" @bind="_articuloEditando.PrecioUnitario" /></td>
                                                            <td>
                                                                <button class="btn btn-sm btn-success me-1" @onclick="GuardarEdicionArticulo">💾</button>
                                                                <button class="btn btn-sm btn-secondary" @onclick="CancelarEdicionArticulo">❌</button>
                                                            </td>
                                                        </tr>
                                                    }
                                                    else
                                                    {
                                                        <!-- Fila Normal -->
                                                        <tr>
                                                            <td class="text-start ps-3">@art.Nombre</td>
                                                            <td>@art.Cantidad</td>
                                                            <td>@art.PrecioUnitario.ToString("C")</td>
                                                            <td>
                                                                <button class="btn btn-sm btn-link text-warning p-0 me-2" @onclick="() => IniciarEdicionArticulo(art)">✏️</button>
                                                                <button class="btn btn-sm btn-link text-danger p-0" @onclick="() => EliminarArticulo(art.ArticuloId, facturaHist.Id)">🗑️</button>
                                                            </td>
                                                        </tr>
                                                    }
                                                }
                                                
                                                <!-- Fila para Agregar Nuevo Artículo -->
                                                <tr class="table-info">
                                                    <td><input class="form-control form-control-sm" placeholder="Nuevo..." @bind="_articuloNuevo.Nombre" /></td>
                                                    <td><input type="number" class="form-control form-control-sm" placeholder="1" @bind="_articuloNuevo.Cantidad" /></td>
                                                    <td><input type="number" class="form-control form-control-sm" placeholder="$" @bind="_articuloNuevo.PrecioUnitario" /></td>
                                                    <td>
                                                        <button class="btn btn-sm btn-primary w-100" @onclick="() => AgregarArticulo(facturaHist.Id)">➕ Agregar</button>
                                                    </td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                }
                                else 
                                {
                                    <!-- MODO VISUALIZACIÓN -->
                                    <h6 class="text-muted border-bottom pb-2">Artículos:</h6>
                                    <ul class="list-group mb-3">
                                        @foreach (var artHist in facturaHist.Articulos)
                                        {
                                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                                @artHist.Nombre 
                                                <span class="badge bg-secondary rounded-pill">@artHist.Cantidad x @artHist.PrecioUnitario.ToString("C")</span>
                                            </li>
                                        }
                                    </ul>
                                    
                                    <div class="d-flex justify-content-end gap-2">
                                        <button class="btn btn-sm btn-outline-warning" @onclick="() => IniciarEdicion(facturaHist)">
                                            ✏️ Editar Factura Completa
                                        </button>
                                        <button class="btn btn-sm btn-danger" @onclick="() => ArchivarFactura(facturaHist.Id)">
                                            <span class="bi bi-lock-fill"></span> Archivar
                                        </button>
                                        <button class="btn btn-sm btn-outline-danger" @onclick="() => ConfirmarEliminacion(facturaHist.Id)">
                                            🗑️ Eliminar
                                        </button>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="text-muted p-3 text-center border rounded bg-light">
                No se encontraron facturas. Intenta buscar otro nombre.
            </div>
        }
    </div>

    <!-- SECCIÓN DE REPORTE ANUAL -->
    <div class="card p-4 shadow-sm" style="border-top: 5px solid #008f39;">
        <h3 class="mb-3 text-success">📊 Reporte Anual</h3>

        <div class="row g-3 mb-3">
            <div class="col-md-6">
                <label class="form-label fw-bold">Cliente:</label>
                <InputText class="form-control" @bind-Value="_nombreClienteAnual" />
            </div>
            <div class="col-md-3">
                <label class="form-label fw-bold">Año:</label>
                <InputNumber class="form-control" @bind-Value="_anioBusquedaAnual" />
            </div>
            <div class="col-md-3 d-flex align-items-end">
                <button class="btn btn-success w-100" @onclick="GenerarReporteAnual">Generar Reporte</button>
            </div>
        </div>

        @if (_totalesMensuales.Any())
        {
            <table class="table table-bordered table-sm text-center">
                <thead class="header-reporte">
                    <tr>
                        <th>Mes</th>
                        <th>Venta Total</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int mes = 1; mes <= 12; mes++)
                    {
                        <tr>
                            <td class="fw-bold">@CultureInfo.CurrentCulture.DateTimeFormat.GetMonthName(mes).ToUpper()</td>
                            <td>@(_totalesMensuales.ContainsKey(mes) ? _totalesMensuales[mes].ToString("C") : "-")</td>
                        </tr>
                    }
                </tbody>
                <tfoot class="total-anual-row">
                    <tr>
                        <td>TOTAL ANUAL</td>
                        <td>@_totalAnual.ToString("C")</td>
                    </tr>
                </tfoot>
            </table>
        }
    </div>

</main>

@code {
    // --- Variables Historial ---
    private string _nombreClienteBusqueda = string.Empty;
    private List<Factura> _historialFacturas = new List<Factura>();
    private int? _facturaEnEdicionId = null;
    private Factura _facturaParaEditar = new Factura();

    // Variables para edición de Artículos
    private int? _articuloEnEdicionId = null;
    private ArticuloFactura _articuloEditando = new ArticuloFactura();
    private ArticuloFactura _articuloNuevo = new ArticuloFactura();

    // --- Variables Reporte Anual ---
    private string _nombreClienteAnual = string.Empty;
    private int _anioBusquedaAnual = DateTime.Now.Year;
    private Dictionary<int, decimal> _totalesMensuales = new Dictionary<int, decimal>();
    private decimal _totalAnual = 0;

    protected override async Task OnInitializedAsync()
    {
        // El dashboard no necesita recargarse aquí, se hace en el Home.razor si fuera necesario.
        // Solo cargamos el historial si había una búsqueda previa.
        _nombreClienteBusqueda = ControladorFactura.NombreClienteActual;
        _nombreClienteAnual = ControladorFactura.NombreClienteActual;
        
        if (!string.IsNullOrWhiteSpace(_nombreClienteBusqueda))
        {
            await BuscarHistorial();
        }
    }

    private async Task BuscarHistorial()
    {
        if (string.IsNullOrWhiteSpace(_nombreClienteBusqueda))
        {
            _historialFacturas.Clear();
            return;
        }
        ControladorFactura.NombreClienteActual = _nombreClienteBusqueda;
        // Usa el servicio, que ya filtra por Archivada = 0
        _historialFacturas = await ServicioFactura.GetFacturasPorClienteAsync(_nombreClienteBusqueda);
    }

    // --- Métodos de Edición de Factura (Cabecera) ---
    private void IniciarEdicion(Factura factura)
    {
        _facturaParaEditar = new Factura { Id = factura.Id, NombreCliente = factura.NombreCliente, Fecha = factura.Fecha };
        _facturaEnEdicionId = factura.Id;
        
        _articuloEnEdicionId = null;
        _articuloNuevo = new ArticuloFactura();
    }

    private void CancelarEdicion()
    {
        _facturaEnEdicionId = null;
        _facturaParaEditar = new Factura();
        _articuloEnEdicionId = null;
    }

    private async Task GuardarEdicionCabeceraAsync(int facturaId)
    {
        await ServicioFactura.ActualizarFacturaAsync(facturaId, _facturaParaEditar.NombreCliente, _facturaParaEditar.Fecha);
        await BuscarHistorial(); // Refrescar para ver cambios
    }

    private async Task ConfirmarEliminacion(int facturaId)
    {
        var confirmacion = await JSRuntime.InvokeAsync<bool>("confirm", "⚠️ ¿Eliminar esta factura y sus artículos? No se puede deshacer.");
        if (confirmacion)
        {
            await ServicioFactura.EliminarFacturaAsync(facturaId);
            await BuscarHistorial();
        }
    }
    
    // --- NUEVO: Archivar Factura ---
    private async Task ArchivarFactura(int idFactura)
    {
        var confirmacion = await JSRuntime.InvokeAsync<bool>("confirm", 
            "⚠️ ¿Archivar esta factura? Se ocultará de todos los reportes y del Dashboard. Se podrá ver en 'Archivados'.");
        
        if (confirmacion)
        {
            // Archivar (estado = true)
            await ServicioFactura.AlternarArchivoFacturaAsync(idFactura, true);
            await BuscarHistorial(); // Refrescar la lista (la factura archivada desaparecerá)
            await JSRuntime.InvokeVoidAsync("alert", $"Factura #{idFactura} archivada exitosamente.");
        }
    }


    // --- MÉTODOS DE GESTIÓN DE ARTÍCULOS ---

    private async Task AgregarArticulo(int facturaId)
    {
        if (string.IsNullOrWhiteSpace(_articuloNuevo.Nombre) || _articuloNuevo.Cantidad <= 0) return;

        _articuloNuevo.FacturaId = facturaId;
        await ServicioFactura.AgregarArticuloAsync(_articuloNuevo);
        
        _articuloNuevo = new ArticuloFactura();
        await BuscarHistorial();
    }

    private void IniciarEdicionArticulo(ArticuloFactura art)
    {
        _articuloEnEdicionId = art.ArticuloId;
        _articuloEditando = new ArticuloFactura 
        { 
            ArticuloId = art.ArticuloId, 
            Nombre = art.Nombre, 
            Cantidad = art.Cantidad, 
            PrecioUnitario = art.PrecioUnitario,
            FacturaId = art.FacturaId
        };
    }

    private void CancelarEdicionArticulo()
    {
        _articuloEnEdicionId = null;
        _articuloEditando = new ArticuloFactura();
    }

    private async Task GuardarEdicionArticulo()
    {
        await ServicioFactura.ActualizarArticuloAsync(_articuloEditando);
        CancelarEdicionArticulo();
        await BuscarHistorial();
    }

    private async Task EliminarArticulo(int idArticulo, int idFactura)
    {
        bool confirm = await JSRuntime.InvokeAsync<bool>("confirm", "¿Borrar este artículo?");
        if (confirm)
        {
            await ServicioFactura.EliminarArticuloAsync(idArticulo, idFactura);
            await BuscarHistorial();
        }
    }

    // --- Método de Reporte Anual ---
    private async Task GenerarReporteAnual()
    {
        _totalesMensuales.Clear();
        _totalAnual = 0;
        
        ControladorFactura.NombreClienteActual = _nombreClienteAnual;
        var facturasDelAnio = await ServicioFactura.GetFacturasPorAnioAsync(_nombreClienteAnual, _anioBusquedaAnual);
        if (facturasDelAnio.Any())
        {
            _totalesMensuales = facturasDelAnio
                .GroupBy(f => f.Fecha.Month)
                .ToDictionary(g => g.Key, g => g.Sum(f => f.Total));
            _totalAnual = facturasDelAnio.Sum(f => f.Total);
        }
    }
}