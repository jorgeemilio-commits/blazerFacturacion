@page "/reportes"
@rendermode InteractiveServer
@using System.Globalization

@inject ServicioFactura ServicioFactura
@inject ControladorFactura ControladorFactura
@inject IJSRuntime JSRuntime

<main class="container">

    <div class="card p-4 mb-4 shadow-sm">
        <h3 class="mb-3">🔎 Historial de Facturas</h3>
        
        <div class="input-group mb-3">
            <span class="input-group-text">Cliente:</span>
            <InputText class="form-control" @bind-Value="_nombreClienteBusqueda" placeholder="Nombre del cliente..." />
            <button class="btn btn-primary" @onclick="BuscarHistorial">Buscar</button>
        </div>

        @if (_historialFacturas.Any())
        {
            <div class="accordion" id="historialAccordion">
                @foreach (var facturaHist in _historialFacturas)
                {
                    <div class="accordion-item">
                        <h2 class="accordion-header" id="heading-@facturaHist.Id">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse-@facturaHist.Id">
                                <div class="d-flex w-100 justify-content-between me-3">
                                    <span><strong>#@facturaHist.Id</strong> - @facturaHist.Fecha.ToShortDateString()</span>
                                    <span class="text-success fw-bold">@facturaHist.Total.ToString("C")</span>
                                </div>
                            </button>
                        </h2>
                        <div id="collapse-@facturaHist.Id" class="accordion-collapse collapse" data-bs-parent="#historialAccordion">
                            <div class="accordion-body bg-light">
                                
                                @if (_facturaEnEdicionId == facturaHist.Id)
                                {
                                    <div class="card p-3 border-warning">
                                        <h6 class="text-warning">Editar Datos de Factura</h6>
                                        <EditForm Model="_facturaParaEditar" OnValidSubmit="() => GuardarEdicionAsync(facturaHist.Id)">
                                            <DataAnnotationsValidator />
                                            <div class="row g-2">
                                                <div class="col-md-5">
                                                    <label>Cliente:</label>
                                                    <InputText class="form-control" @bind-Value="_facturaParaEditar.NombreCliente" />
                                                </div>
                                                <div class="col-md-4">
                                                    <label>Fecha:</label>
                                                    <InputDate class="form-control" @bind-Value="_facturaParaEditar.Fecha" />
                                                </div>
                                                <div class="col-md-3 d-flex align-items-end gap-2">
                                                    <button type="submit" class="btn btn-success w-100">Guardar</button>
                                                    <button type="button" class="btn btn-secondary w-100" @onclick="CancelarEdicion">Cancelar</button>
                                                </div>
                                            </div>
                                        </EditForm>
                                    </div>
                                }
                                else 
                                {
                                    <h6 class="text-muted">Artículos de la factura:</h6>
                                    <ul class="list-group mb-3">
                                        @foreach (var artHist in facturaHist.Articulos)
                                        {
                                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                                @artHist.Nombre 
                                                <span class="badge bg-secondary rounded-pill">@artHist.Cantidad x @artHist.PrecioUnitario.ToString("C")</span>
                                            </li>
                                        }
                                    </ul>
                                    
                                    <div class="d-flex justify-content-end gap-2">
                                        <button class="btn btn-sm btn-outline-warning" @onclick="() => IniciarEdicion(facturaHist)">
                                            Editar Datos
                                        </button>
                                        <button class="btn btn-sm btn-outline-danger" @onclick="() => ConfirmarEliminacion(facturaHist.Id)">
                                            Eliminar Factura
                                        </button>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="text-muted p-3">No se encontraron facturas. Intenta buscar otro nombre.</div>
        }
    </div>

    <div class="card p-4 shadow-sm">
        <h3 class="mb-3">📊 Reporte Anual</h3>

        <div class="row g-3 mb-3">
            <div class="col-md-6">
                <label class="form-label">Cliente:</label>
                <InputText class="form-control" @bind-Value="_nombreClienteAnual" />
            </div>
            <div class="col-md-3">
                <label class="form-label">Año:</label>
                <InputNumber class="form-control" @bind-Value="_anioBusquedaAnual" />
            </div>
            <div class="col-md-3 d-flex align-items-end">
                <button class="btn btn-success w-100" @onclick="GenerarReporteAnual">Generar Reporte</button>
            </div>
        </div>

        @if (_totalesMensuales.Any())
        {
            <table class="table table-bordered table-sm text-center">
                <thead class="table-secondary">
                    <tr>
                        <th>Mes</th>
                        <th>Venta Total</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int mes = 1; mes <= 12; mes++)
                    {
                        <tr>
                            <td>@CultureInfo.CurrentCulture.DateTimeFormat.GetMonthName(mes)</td>
                            <td>@(_totalesMensuales.ContainsKey(mes) ? _totalesMensuales[mes].ToString("C") : "-")</td>
                        </tr>
                    }
                </tbody>
                <tfoot class="table-dark fw-bold">
                    <tr>
                        <td>TOTAL ANUAL</td>
                        <td>@_totalAnual.ToString("C")</td>
                    </tr>
                </tfoot>
            </table>
        }
    </div>

</main>

@code {
    // --- Variables Historial ---
    private string _nombreClienteBusqueda = string.Empty;
    private List<Factura> _historialFacturas = new List<Factura>();
    private int? _facturaEnEdicionId = null;
    private Factura _facturaParaEditar = new Factura();

    // --- Variables Reporte Anual ---
    private string _nombreClienteAnual = string.Empty;
    private int _anioBusquedaAnual = DateTime.Now.Year;
    private Dictionary<int, decimal> _totalesMensuales = new Dictionary<int, decimal>();
    private decimal _totalAnual = 0;

    protected override async Task OnInitializedAsync()
    {
        // Recuperar estado del controlador para no perder la búsqueda al cambiar de página
        _nombreClienteBusqueda = ControladorFactura.NombreClienteActual;
        _nombreClienteAnual = ControladorFactura.NombreClienteActual;
        
        if (!string.IsNullOrWhiteSpace(_nombreClienteBusqueda))
        {
            await BuscarHistorial();
        }
    }

    private async Task BuscarHistorial()
    {
        if (string.IsNullOrWhiteSpace(_nombreClienteBusqueda))
        {
            _historialFacturas.Clear();
            return;
        }
        // Guardar en el controlador
        ControladorFactura.NombreClienteActual = _nombreClienteBusqueda;
        // Llamar al servicio SQL
        _historialFacturas = await ServicioFactura.GetFacturasPorClienteAsync(_nombreClienteBusqueda);
    }

    // --- Métodos de Edición de Factura ---
    private void IniciarEdicion(Factura factura)
    {
        // Copia simple para editar
        _facturaParaEditar = new Factura { Id = factura.Id, NombreCliente = factura.NombreCliente, Fecha = factura.Fecha };
        _facturaEnEdicionId = factura.Id;
    }

    private void CancelarEdicion()
    {
        _facturaEnEdicionId = null;
        _facturaParaEditar = new Factura();
    }

    private async Task GuardarEdicionAsync(int facturaId)
    {
        await ServicioFactura.ActualizarFacturaAsync(facturaId, _facturaParaEditar.NombreCliente, _facturaParaEditar.Fecha);
        CancelarEdicion();
        await BuscarHistorial(); // Recargar lista
    }

    private async Task ConfirmarEliminacion(int facturaId)
    {
        // Confirmación con JavaScript nativo
        var confirmacion = await JSRuntime.InvokeAsync<bool>("confirm", "⚠️ ¿Eliminar esta factura y sus artículos? No se puede deshacer.");
        if (confirmacion)
        {
            await ServicioFactura.EliminarFacturaAsync(facturaId);
            await BuscarHistorial();
        }
    }

    // --- Método de Reporte Anual ---
    private async Task GenerarReporteAnual()
    {
        _totalesMensuales.Clear();
        _totalAnual = 0;
        
        // Sincronizar búsqueda
        ControladorFactura.NombreClienteActual = _nombreClienteAnual;

        // Obtener datos brutos del año
        var facturasDelAnio = await ServicioFactura.GetFacturasPorAnioAsync(_nombreClienteAnual, _anioBusquedaAnual);

        if (facturasDelAnio.Any())
        {
            // Procesar datos en memoria (LINQ to Objects)
            _totalesMensuales = facturasDelAnio
                .GroupBy(f => f.Fecha.Month)
                .ToDictionary(g => g.Key, g => g.Sum(f => f.Total));
            
            _totalAnual = facturasDelAnio.Sum(f => f.Total);
        }
    }
}