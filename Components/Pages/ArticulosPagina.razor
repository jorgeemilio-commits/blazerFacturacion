@page "/catalogo"
@rendermode InteractiveServer
@inject ServicioArticulo ServicioArticulo 
@inject IJSRuntime JSRuntime

<style>
    /* Estilo local para tabla Waldos */
    .tabla-waldos thead {
        background-color: #008f39 !important; /* Verde Principal */
        color: white;
    }
    .card-edicion {
        border-top: 5px solid #D50000; /* Borde Rojo arriba */
    }
</style>

<main class="container">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3 class="fw-bold" style="color: #D50000;">Catálogo de Productos</h3>
    </div>

    <div class="card p-4 mb-4 shadow-sm card-edicion">
        <h5 class="card-title mb-3 fw-bold text-success">
            @( _articuloEnEdicion.Id == 0 ? "✨ Nuevo Producto" : "✏️ Editando Producto")
        </h5>
        
        <EditForm Model="_articuloEnEdicion" OnValidSubmit="GuardarArticulo">
            <DataAnnotationsValidator />
            <ValidationSummary class="text-danger" />

            <div class="row g-3">
                <div class="col-md-6">
                    <label class="form-label fw-bold">Nombre del Producto:</label>
                    <InputText class="form-control" @bind-Value="_articuloEnEdicion.Nombre" placeholder="Ej. Coca Cola" />
                </div>
                <div class="col-md-4">
                    <label class="form-label fw-bold">Precio Estándar:</label>
                    <InputNumber class="form-control" @bind-Value="_articuloEnEdicion.Precio" />
                </div>
                <div class="col-md-2 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary w-100 fw-bold">
                        @(_articuloEnEdicion.Id == 0 ? "Guardar" : "Actualizar")
                    </button>
                </div>
            </div>
            
            @if (_articuloEnEdicion.Id != 0)
            {
                <div class="mt-2 text-end">
                    <button type="button" class="btn btn-link text-secondary" @onclick="CancelarEdicion">Cancelar Edición</button>
                </div>
            }
        </EditForm>
    </div>

    <div class="table-responsive shadow-sm">
        <table class="table table-hover table-bordered text-center align-middle tabla-waldos mb-0">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Precio</th>
                    <th style="width: 200px;">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @if (_listaCatalogo.Any())
                {
                    @foreach (var item in _listaCatalogo)
                    {
                        <tr>
                            <td class="text-start px-3 fw-bold">@item.Nombre</td>
                            <td class="text-success fw-bold">@item.Precio.ToString("C")</td>
                            <td>
                                <button class="btn btn-sm btn-warning me-2" @onclick="() => Editar(item)">
                                    ✏️ Editar
                                </button>
                                <button class="btn btn-sm btn-outline-danger" @onclick="() => Eliminar(item)">
                                    🗑️ Eliminar
                                </button>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="3" class="text-muted py-4">No hay productos en el catálogo. ¡Agrega uno arriba!</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</main>

@code {
    private List<Articulo> _listaCatalogo = new List<Articulo>();
    private Articulo _articuloEnEdicion = new Articulo();

    protected override async Task OnInitializedAsync()
    {
        await CargarCatalogo();
    }

    private async Task CargarCatalogo()
    {
        _listaCatalogo = await ServicioArticulo.GetCatalogoArticulosAsync();
    }

    private async Task GuardarArticulo()
    {
        await ServicioArticulo.GuardarArticuloCatalogoAsync(_articuloEnEdicion);
        _articuloEnEdicion = new Articulo(); 
        await CargarCatalogo();
    }

    private void Editar(Articulo item)
    {
        _articuloEnEdicion = new Articulo { Id = item.Id, Nombre = item.Nombre, Precio = item.Precio };
    }

    private void CancelarEdicion()
    {
        _articuloEnEdicion = new Articulo();
    }

    private async Task Eliminar(Articulo item)
    {
        bool confirmado = await JSRuntime.InvokeAsync<bool>("confirm", $"¿Estás seguro de eliminar '{item.Nombre}' del catálogo?");
        if (confirmado)
        {
            await ServicioArticulo.EliminarArticuloCatalogoAsync(item.Id);
            await CargarCatalogo();
        }
    }
}