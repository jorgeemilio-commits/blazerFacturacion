@page "/catalogo"
@rendermode InteractiveServer
@inject ServicioArticulo ServicioArticulo 
@inject IJSRuntime JSRuntime

<style>
    :root {
        --w-amarillo: #E3E36A;
        --w-rojo: #881600;
        --w-vino: #4E0110;
    }

    /* Botón Guardar (Azul -> Rojo) */
    .btn-primary {
        background-color: var(--w-rojo) !important;
        border-color: var(--w-vino) !important;
    }
    
    /* Botón Editar (Amarillo) */
    .btn-warning {
        background-color: var(--w-amarillo) !important;
        color: #333 !important;
        border-color: #c4c440 !important;
    }

    /* Botón Eliminar (Rojo/Vino oscuro) */
    .btn-danger {
        background-color: var(--w-vino) !important;
        border-color: black !important;
    }

    /* Encabezado de la tabla (Negro -> Vino) */
    .table-dark {
        --bs-table-bg: var(--w-vino) !important;
    }

    h3, h5 { color: var(--w-rojo); font-weight: bold; }
</style>

<main class="container">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3>Catálogo de Productos</h3>
    </div>

    <div class="card p-4 mb-4 shadow-sm border-primary">
        <h5 class="card-title mb-3">@( _articuloEnEdicion.Id == 0 ? "✨ Nuevo Producto" : "✏️ Editando Producto")</h5>
        
        <EditForm Model="_articuloEnEdicion" OnValidSubmit="GuardarArticulo">
            <DataAnnotationsValidator />
            <ValidationSummary class="text-danger" />

            <div class="row g-3">
                <div class="col-md-6">
                    <label class="form-label">Nombre del Producto:</label>
                    <InputText class="form-control" @bind-Value="_articuloEnEdicion.Nombre" placeholder="Ej. Coca Cola" />
                </div>
                <div class="col-md-4">
                    <label class="form-label">Precio Estándar:</label>
                    <InputNumber class="form-control" @bind-Value="_articuloEnEdicion.Precio" />
                </div>
                <div class="col-md-2 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary w-100">
                        @(_articuloEnEdicion.Id == 0 ? "Guardar" : "Actualizar")
                    </button>
                </div>
            </div>
            
            @if (_articuloEnEdicion.Id != 0)
            {
                <div class="mt-2 text-end">
                    <button type="button" class="btn btn-link text-secondary" @onclick="CancelarEdicion">Cancelar Edición</button>
                </div>
            }
        </EditForm>
    </div>

    <div class="table-responsive">
        <table class="table table-hover table-bordered text-center align-middle">
            <thead class="table-dark">
                <tr>
                    <th>Nombre</th>
                    <th>Precio</th>
                    <th style="width: 200px;">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @if (_listaCatalogo.Any())
                {
                    @foreach (var item in _listaCatalogo)
                    {
                        <tr>
                            <td class="text-start px-3">@item.Nombre</td>
                            <td>@item.Precio.ToString("C")</td>
                            <td>
                                <button class="btn btn-sm btn-warning me-2" @onclick="() => Editar(item)">
                                    <i class="bi bi-pencil"></i> Editar
                                </button>
                                <button class="btn btn-sm btn-danger" @onclick="() => Eliminar(item)">
                                    <i class="bi bi-trash"></i> Eliminar
                                </button>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="3" class="text-muted py-4">No hay productos en el catálogo. ¡Agrega uno arriba!</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</main>

@code {
    private List<Articulo> _listaCatalogo = new List<Articulo>();
    private Articulo _articuloEnEdicion = new Articulo();

    protected override async Task OnInitializedAsync()
    {
        await CargarCatalogo();
    }

    private async Task CargarCatalogo()
    {
        _listaCatalogo = await ServicioArticulo.GetCatalogoArticulosAsync();
    }

    private async Task GuardarArticulo()
    {
        await ServicioArticulo.GuardarArticuloCatalogoAsync(_articuloEnEdicion);
        _articuloEnEdicion = new Articulo(); 
        await CargarCatalogo();
    }

    private void Editar(Articulo item)
    {
        _articuloEnEdicion = new Articulo { Id = item.Id, Nombre = item.Nombre, Precio = item.Precio };
    }

    private void CancelarEdicion()
    {
        _articuloEnEdicion = new Articulo();
    }

    private async Task Eliminar(Articulo item)
    {
        bool confirmado = await JSRuntime.InvokeAsync<bool>("confirm", $"¿Estás seguro de eliminar '{item.Nombre}' del catálogo?");
        if (confirmado)
        {
            await ServicioArticulo.EliminarArticuloCatalogoAsync(item.Id);
            await CargarCatalogo();
        }
    }
}