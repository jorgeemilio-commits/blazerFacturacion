@page "/archivados"
@rendermode InteractiveServer

@using blazerFacturacion.Components.Data
@inject ServicioFactura ServicioFactura
@inject IJSRuntime JSRuntime

<style>
    .lock-card {
        max-width: 500px;
        margin: 100px auto;
        padding: 30px;
    }
    .text-factura-archivada {
        color: #D50000;
        font-weight: bold;
    }
</style>

<div class="container">
    <h1 class="text-factura-archivada display-5 mb-4">
        <span class="bi bi-lock-fill"></span> Gestión de Facturas Archivadas
    </h1>

    @if (_accesoConcedido)
    {
        <div class="card p-4 shadow-sm border-0" style="border-top: 5px solid #D50000;">

            <div class="d-flex justify-content-between align-items-center mb-3">
                <h4 class="text-secondary m-0">Facturas Ocultas (@_facturasArchivadas.Count)</h4>
            </div>
            
            @if (_facturasArchivadas.Any())
            {
                <div class="accordion" id="archivadosAccordion">
                    @foreach (var facturaHist in _facturasArchivadas)
                    {
                        <div class="accordion-item border-danger">
                            <h2 class="accordion-header" id="heading-@facturaHist.Id">
                                <button class="accordion-button collapsed fw-bold text-dark" type="button" data-bs-toggle="collapse" data-bs-target="#collapse-@facturaHist.Id">
                                    <div class="d-flex w-100 justify-content-between me-3">
                                        <span>📜 #@facturaHist.Id - @facturaHist.NombreCliente (@facturaHist.Fecha.ToShortDateString())</span>
                                        <span class="text-danger">@facturaHist.Total.ToString("C")</span>
                                    </div>
                                </button>
                            </h2>
                            <div id="collapse-@facturaHist.Id" class="accordion-collapse collapse" data-bs-parent="#archivadosAccordion">
                                <div class="accordion-body bg-light">
                                    <h6 class="text-muted border-bottom pb-2">Artículos archivados:</h6>
                                    
                                    <ul class="list-group mb-3">
                                        @foreach (var artHist in facturaHist.Articulos)
                                        {
                                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                                @artHist.Nombre 
                                                <span class="badge bg-secondary rounded-pill">@artHist.Cantidad x @artHist.PrecioUnitario.ToString("C")</span>
                                            </li>
                                        }
                                    </ul>
                                    
                                    <div class="d-flex justify-content-end">
                                        <button class="btn btn-success fw-bold" @onclick="() => DesarchivarFactura(facturaHist.Id)">
                                            🔓 Desarchivar y Restaurar
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="alert alert-info text-center">
                    No hay facturas archivadas en este momento.
                </div>
            }
        </div>
    }
    else
    {
        <div class="card lock-card shadow-lg border-danger">
            <h4 class="text-danger mb-4">🔑 Ingrese Contraseña</h4>
            <p class="text-muted">La contraseña es requerida para gestionar los archivos.</p>

            <InputText type="password" class="form-control form-control-lg mb-3" 
                   placeholder="Contraseña" @bind-Value="_passwordInput" />
            
            @if (!string.IsNullOrEmpty(_mensajeError))
            {
                <div class="alert alert-danger py-2">@_mensajeError</div>
            }

            <button class="btn btn-danger btn-lg w-100" @onclick="VerificarPassword">Acceder</button>
        </div>
    }
</div>

@code {
    private const string PASSWORD_SECRETA = "Medel2025";
    private string _passwordInput = string.Empty;
    private string _mensajeError = string.Empty;
    private bool _accesoConcedido = false; 
    
    private List<Factura> _facturasArchivadas = new List<Factura>();

    protected override async Task OnInitializedAsync()
    {
        // El acceso solo se concede al ingresar la contraseña.
    }

    private async Task VerificarPassword()
    {
        _mensajeError = string.Empty;
        if (_passwordInput == PASSWORD_SECRETA)
        {
            _accesoConcedido = true;
            await CargarFacturasArchivadas();
        }
        else
        {
            _mensajeError = "Contraseña incorrecta. Intente de nuevo.";
            _passwordInput = string.Empty;
        }
    }

    private async Task CargarFacturasArchivadas()
    {
        _facturasArchivadas = await ServicioFactura.GetFacturasArchivadasAsync();
    }

    private async Task DesarchivarFactura(int idFactura)
    {
        var confirmacion = await JSRuntime.InvokeAsync<bool>("confirm", 
            "¿Confirmar la acción? Esta factura volverá a aparecer en todos los reportes y será visible en el Dashboard.");
        
        if (confirmacion)
        {
            await ServicioFactura.AlternarArchivoFacturaAsync(idFactura, false);
            
            // Recargar la lista
            await CargarFacturasArchivadas();
            await JSRuntime.InvokeVoidAsync("alert", $"Factura #{idFactura} desarchivada exitosamente.");
        }
    }
}